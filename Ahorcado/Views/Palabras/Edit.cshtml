@model Ahorcado.Models.Palabra

@{
    ViewBag.Title = "Editar Palabra";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<h2 class="text-center mb-4 text-warning"><i class="fas fa-edit"></i> Editar Palabra</h2>

<div class="card shadow p-4 bg-dark text-white">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.PalabraID)

        <div class="mb-3">
            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.TextoNormalizado, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.TextoNormalizado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TextoNormalizado, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-3">
            @Html.EditorFor(model => model.TieneTilde, new { htmlAttributes = new { @class = "form-check-input" } })
            @Html.LabelFor(model => model.TieneTilde, htmlAttributes: new { @class = "form-check-label" })
            @Html.ValidationMessageFor(model => model.TieneTilde, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-4">
            @Html.EditorFor(model => model.Usada, new { htmlAttributes = new { @class = "form-check-input" } })
            @Html.LabelFor(model => model.Usada, htmlAttributes: new { @class = "form-check-label" })
            @Html.ValidationMessageFor(model => model.Usada, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Cambios</button>
        @Html.ActionLink("← Volver a la lista", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>

