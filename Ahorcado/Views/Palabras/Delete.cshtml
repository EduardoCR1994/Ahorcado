@model Ahorcado.Models.Palabra

@{
    ViewBag.Title = "Eliminar Palabra";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<h2 class="text-center mb-4 text-danger"><i class="fas fa-trash-alt"></i> Confirmar Eliminación</h2>

<div class="card bg-dark text-white shadow p-4">
    <h4 class="text-warning">¿Estás seguro de que deseas eliminar esta palabra?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Texto</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Texto)</dd>

        <dt class="col-sm-4">Texto Normalizado</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TextoNormalizado)</dd>

        <dt class="col-sm-4">¿Tiene Tilde?</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TieneTilde)</dd>

        <dt class="col-sm-4">¿Ya fue usada?</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Usada)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-4">
            <input type="submit" value="🗑️ Eliminar" class="btn btn-danger me-2" />
            @Html.ActionLink("← Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
