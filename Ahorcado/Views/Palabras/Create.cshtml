@model Ahorcado.Models.Palabra

@{
    ViewBag.Title = "Crear Palabra";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="card p-4 shadow bg-dark text-white">
    <h2 class="text-center mb-4"><i class="fas fa-pen"></i> Agregar Nueva Palabra</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "alert alert-warning text-dark border border-warning", role = "alert" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-3">
            @Html.EditorFor(model => model.TieneTilde, new { htmlAttributes = new { @class = "form-check-input" } })
            @Html.LabelFor(model => model.TieneTilde, htmlAttributes: new { @class = "form-check-label ms-2" })
            @Html.ValidationMessageFor(model => model.TieneTilde, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-4">
            @Html.EditorFor(model => model.Usada, new { htmlAttributes = new { @class = "form-check-input" } })
            @Html.LabelFor(model => model.Usada, htmlAttributes: new { @class = "form-check-label ms-2" })
            @Html.ValidationMessageFor(model => model.Usada, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary me-2"><i class="fas fa-save"></i> Guardar Palabra</button>
        @Html.ActionLink("← Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>


