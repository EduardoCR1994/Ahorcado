@model Ahorcado.Models.Palabra

@{
    ViewBag.Title = "Detalles de Palabra";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<h2 class="text-center mb-4 text-info"><i class="fas fa-info-circle"></i> Detalles de la Palabra</h2>

<div class="card bg-dark text-white shadow p-4">
    <dl class="row">
        <dt class="col-sm-4">Texto</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Texto)</dd>

        <dt class="col-sm-4">Texto Normalizado</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TextoNormalizado)</dd>

        <dt class="col-sm-4">¿Tiene Tilde?</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.TieneTilde)</dd>

        <dt class="col-sm-4">¿Ya fue usada?</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Usada)</dd>
    </dl>

    <div class="mt-4">
        @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.PalabraID }, new { @class = "btn btn-warning me-2" })
        @Html.ActionLink("← Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

