@model IEnumerable<Ahorcado.Models.Palabra>

@{
    ViewBag.Title = "Listado de Palabras";
}

<!-- Fuente y Font Awesome (en caso de que no esté en Layout) -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="card">
    <h2 class="text-center mb-4"><i class="fas fa-book"></i> Palabras Registradas</h2>

    <div class="text-end mb-3">
        @Html.ActionLink("➕ Agregar Palabra", "Create", null, new { @class = "btn" })
    </div>

    <table class="table table-dark table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Texto)</th>
                <th>@Html.DisplayNameFor(model => model.TextoNormalizado)</th>
                <th>@Html.DisplayNameFor(model => model.TieneTilde)</th>
                <th>@Html.DisplayNameFor(model => model.Usada)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Texto)</td>
                    <td>@Html.DisplayFor(modelItem => item.TextoNormalizado)</td>
                    <td>@Html.DisplayFor(modelItem => item.TieneTilde)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usada)</td>
                    <td>
                        @Html.ActionLink("✏️ Editar", "Edit", new { id = item.PalabraID }, new { @class = "btn btn-sm" })
                        @Html.ActionLink("🔍 Detalles", "Details", new { id = item.PalabraID }, new { @class = "btn btn-sm" })
                        @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.PalabraID }, new { @class = "btn btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
