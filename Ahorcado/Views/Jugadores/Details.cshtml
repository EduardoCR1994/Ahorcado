@model Ahorcado.Models.Jugador

@{
    ViewBag.Title = "Detalle del Jugador";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<h2 class="text-center mb-4 text-white"><i class="fas fa-user"></i> Detalle del Jugador</h2>

<div class="card shadow p-4 mb-5" style="background-color: #1e1e2f; color: white;">
    <div class="mb-3">
        <label class="form-label fw-bold text-white">🆔 Identificación:</label>
        <p class="form-control-plaintext text-white">@Model.Identificacion</p>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold text-white">👤 Nombre:</label>
        <p class="form-control-plaintext text-white">@Model.Nombre</p>
    </div>
</div>

<div class="d-flex justify-content-between">
    @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.Identificacion }, new { @class = "btn btn-warning fw-bold" })
    @Html.ActionLink("← Volver a la lista", "Index", null, new { @class = "btn btn-secondary fw-bold" })
</div>


