@model IEnumerable<Ahorcado.Models.Jugador>

@{
    ViewBag.Title = "Lista de Jugadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = Model?.Count() ?? 0;
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>

    .table {
        background: transparent !important;
    }

        /* Quitar fondo blanco de las celdas */
        .table td,
        .table th {
            background-color: transparent !important;
            color: #e4e9f5; /* texto claro para contraste */
        }

        /* Alternar hover */
        .table tbody tr:hover {
            background: rgba(255,255,255,0.05);
            .card-wrap {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(180deg, #1b2540, #1f2a48);
        border: 1px solid #2b3658;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
        padding: 24px;
    }

    .card-title {
        display: flex;
        align-items: center;
        gap: .6rem;
        color: #e9eef9;
        font-weight: 600;
        margin: 0 0 10px 0;
    }

    .subtitle {
        color: #c5d4ff;
        font-size: .9rem;
    }

    .toolbar {
        display: flex;
        align-items: center;
        gap: .6rem;
    }

    .btn {
        border-radius: 12px !important;
        padding: .55rem .9rem !important;
        font-weight: 600;
        background: #1e293b;
        border: 1px solid #2b3546;
        color: #e5e7eb;
        transition: transform .05s ease, filter .15s ease;
        text-decoration: none;
    }

        .btn:hover {
            filter: brightness(1.12);
            transform: translateY(-1px);
        }

    .btn-primary {
        background: #3b82f6;
        border-color: #3b82f6;
        color: #fff;
    }

    .btn-warning {
        background: #f59e0b;
        border-color: #f59e0b;
        color: #111827;
    }

    .btn-info {
        background: #0ea5e9;
        border-color: #0ea5e9;
    }

    .btn-danger {
        background: #ef4444;
        border-color: #ef4444;
    }

    .table-wrap {
        overflow: auto;
        border-radius: 14px;
        border: 1px solid #2b3658;
    }

    table.table {
        margin: 0;
        background: transparent;
        color: #e4e9f5;
    }

    thead th {
        background: rgba(15,19,25,0.7);
        color: #eaf2ff;
        border-bottom: 0 !important;
        position: sticky;
        top: 0;
        z-index: 2;
    }

    tbody tr {
        transition: background .15s ease;
    }

        tbody tr:hover {
            background: rgba(255,255,255,0.05);
        }

    td, th {
        vertical-align: middle !important;
    }

    .badge-id {
        display: inline-block;
        background: #24304d;
        color: #c7d7ff;
        padding: .25rem .5rem;
        border-radius: 999px;
        font-size: .85rem;
        border: 1px solid #2c3a60;
    }

    .empty {
        text-align: center;
        padding: 36px;
        color: #c5d4ff;
    }
</style>

<div class="card-wrap">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="card-title">
                <i class="fas fa-users"></i> Lista de Jugadores
            </h2>
            <div class="subtitle">Total: <strong>@total</strong></div>
        </div>

        <div class="toolbar">
            @Html.ActionLink("➕ Agregar Jugador", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="table-wrap">
        <table class="table table-hover table-borderless align-middle">
            <thead>
                <tr>
                    <th style="width:28%">Identificación</th>
                    <th>Nombre</th>
                    <th style="width:34%; text-align:center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="3" class="empty">
                            <i class="fa-regular fa-face-smile-beam"></i> No hay jugadores registrados todavía.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge-id">@item.Identificacion</span></td>
                            <td>@item.Nombre</td>
                            <td class="text-center">
                                @Html.ActionLink("✏️ Editar", "Edit", new { id = item.Identificacion }, new { @class = "btn btn-warning btn-sm me-1" })
                                @Html.ActionLink("📄 Detalles", "Details", new { id = item.Identificacion }, new { @class = "btn btn-info btn-sm me-1" })
                                @Html.ActionLink("🗑 Eliminar", "Delete", new { id = item.Identificacion }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
