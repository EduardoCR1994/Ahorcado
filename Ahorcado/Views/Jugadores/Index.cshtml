@model IEnumerable<Ahorcado.Models.Jugador>

@{
    ViewBag.Title = "Lista de Jugadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = Model?.Count() ?? 0;
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />


<div class="card-wrap">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="card-title">
                <i class="fas fa-users"></i> Lista de Jugadores
            </h2>
            <div class="subtitle">Total: <strong>@total</strong></div>
        </div>

        <div class="toolbar">
            @Html.ActionLink("➕ Agregar Jugador", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="table-wrap">
        <table class="table table-hover table-borderless align-middle">
            <thead>
                <tr>
                    <th style="width:28%">Identificación</th>
                    <th>Nombre</th>
                    <th style="width:34%; text-align:center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="3" class="empty">
                            <i class="fa-regular fa-face-smile-beam"></i> No hay jugadores registrados todavía.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge-id">@item.Identificacion</span></td>
                            <td>@item.Nombre</td>
                            <td class="text-center">
                                @Html.ActionLink("✏️ Editar", "Edit", new { id = item.Identificacion }, new { @class = "btn btn-warning btn-sm me-1" })
                                @Html.ActionLink("📄 Detalles", "Details", new { id = item.Identificacion }, new { @class = "btn btn-info btn-sm me-1" })
                                @Html.ActionLink("🗑 Eliminar", "Delete", new { id = item.Identificacion }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
