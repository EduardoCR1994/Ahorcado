@{
    ViewBag.Title = "Inicio";
}

<!-- Font Awesome y Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />



<div class="menu-container text-center">
    <h1 class="display-4 fw-bold mb-2 animate-fade-in"><i class="fas fa-gamepad"></i> Juego del Ahorcado</h1>
    <p class="lead mb-5 text-light animate-fade-in-delay">Elige una opción para comenzar</p>

    <!-- Botón destacado -->
    <div class="mb-4 animate-pop-in">
        <a href="@Url.Action("Create", "Partidas")" class="btn btn-lg btn-warning pulsate px-5 py-3 fw-bold shadow-lg rounded-pill">
            🎲 Iniciar Partida
        </a>
    </div>

    <!-- Otros botones -->
    <div class="glass-card d-flex flex-wrap justify-content-center gap-3 p-4 rounded-4 animate-fade-in-delay2">
        <a href="@Url.Action("Create", "Jugadores")" class="btn btn-outline-light px-4 py-2 rounded-pill shadow-sm">
            👤 Crear Jugador
        </a>

        <a href="@Url.Action("Create", "Palabras")" class="btn btn-outline-light px-4 py-2 rounded-pill shadow-sm">
            ✏️ Agregar Palabra
        </a>

        <a href="@Url.Action("Escalafon", "Partidas")" class="btn btn-outline-light px-4 py-2 rounded-pill shadow-sm">
            📊 Ver Escalafón
        </a>
    </div>
</div>

